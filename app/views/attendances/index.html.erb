

<div class="container">
  <% if current_user.kind == "investors" %>
    <h1 class="pt-3 pb-5">Find Founders</h1>
  <% else %>
    <h1 class="pt-3 pb-5">Find Investors</h1>
  <% end %>

  <% if @meetings.count > 0 %>
    <div class="alert flash flash-success alert-dismissible fade show" role="alert">
         <span><strong>Yay!</strong> ðŸŽ‰ You have a new match! <%= link_to "See more", meetings_path %></span>
         <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </div>
  <% end %>
  <% @attendances.each do |attendance| %>
    <div class="card col-8 justify-content-center m-auto matching-card">
      <div class="p-3">
        <div class="pt-3 d-flex justify-content-between">
          <div class="header-text">
            <h2><%= attendance.user.company_name %></h2>
            <h3><%= attendance.user.first_name %> <%= attendance.user.last_name %>, <%= attendance.user.position %></h3>
          </div>
          <div>
            <%= cl_image_tag attendance.user.photo, class: "matching-company-logo" %>
          </div>
        </div>
        <div id="company-details">
          <p><%= attendance.user.selling_to.join(", ")%> â€“ <%= attendance.user.sectors.join(", ") %></p>
          <p><%= attendance.user.company_city %></p>
          <p><%= attendance.user.stages.join(", ") %>, raised <%= number_to_currency(attendance.user.funds_raised, delimiter: ",", precision: 0, unit: "â‚¬")  %> to date</p>
          <p>Founded <%= attendance.user.company_founding_year %>, now <%= attendance.user.fte %> employees</p>
        </div>
        <div>
          <p><%= truncate(attendance.user.firm_description, length: 180 ) %></p>
        </div>
        <div class="py-3">
          <%= link_to "âœ”", attendance_create_like_path(attendance), method: :post, class: "like btn btn-success mr-2 px-4", id:"like-button", remote: true %>
          <%= link_to "Pass", attendance_create_dislike_path(attendance), method: :post, class: "matching-pass-link", remote: true %>
        </div>
      </div>

    </div>
    <!-- <br> -->
  <% end %>
</div>









