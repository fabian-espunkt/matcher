<div class="container">
  <h1 class="mb-4 py-3">Your Appointments</h1>

  <div class="row mb-4">
    <!-- card with meeting spot choices for investor -->
    <div class="card col-lg-8">
      <div class="d-flex justify-content-between align-items-center">
        <p>Select our default meeting spot: </p>
         <!-- Chosing meeting spot dropdown menu -->
        <div class="dropdown">
          <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
           Select Meeting Spot
         </button>
         <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <% %>
           <a class="dropdown-item .active" href="#">Coffee Area</a>
           <a class="dropdown-item" href="#">Office room 1</a>
           <a class="dropdown-item" href="#">Office room 2</a>
         </div>
        </div>
         <!-- Save meeting spot -->
        <div>
          <button type="button" class="btn btn-link">☑️</button>
        </div>
      </div>
    </div>
  </div>

  <!-- calendar view with simple_calendar gem -->

  <div class="simple-calendar bg-white">
    <%= calendar number_of_days: 2 do |date| %>
      <div class="border">
        <%= date %>
      </div>
      <% 10.upto(18).each do |hour| %>
        <div>
          <div>
            <%= Time.parse("#{hour}:00").strftime("%l %P") %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>



</div>
