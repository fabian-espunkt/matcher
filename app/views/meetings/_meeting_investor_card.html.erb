<div class="row mb-4" id="selection-card">
  <div class="card col-lg-12 selection-card">
    <div class="d-flex justify-content-between align-items-center" id="inner-content">

      <div class="col-sm-6 d-flex justfiy-content-between align-items-center">
        <div class="col">
          <%= cl_image_tag meeting.investor.photo, class: "user-photo" %>
        </div>
        <hr noshade style="background-color: #c3bdbd42;height: 100px;width: 2.2px;">
        <div class="line-height-10 info-one col">
          <strong><%= meeting.investor.first_name %> <%= meeting.investor.last_name %></strong></p>
          <p><%= meeting.investor.position %><br> <%= meeting.investor.company_name %></p>
        </div>
        <hr noshade style="background-color: #c3bdbd42;height: 100px;width: 2.2px;">
        <div class="col info-two">
          <p><%= meeting.investor.company_city %></p>
        </div>
        <hr noshade style="background-color: #c3bdbd42;height: 100px;width: 2.2px;">
      </div>


      <div class="col-sm-6 d-flex justfiy-content-between align-items-center">
        <div class="col info-three">
          <p>Investing in:</p>
          <p><strong>Business Models: </strong><%= meeting.investor.selling_to.join(", ") %> </p>
          <p><strong>Categories: </strong><%= meeting.investor.sectors.join(", ") %></p>
          <p><strong>Stages: </strong> <%= meeting.investor.stages.join(", ") %></p>
        </div>
        <hr noshade style="background-color: #c3bdbd42;height: 100px;width: 2.2px;">
        <div class="matching-status col-">
          <% if meeting.matching_status == "Waiting" %>
          <p id="waiting"><strong><%= meeting.matching_status.upcase %></strong></p>
          <% elsif meeting.matching_status == "Matched" %>
          <p id="matched"><strong><%= meeting.matching_status.upcase %></strong><br><span class="schedule-now"><%= link_to "Schedule now", appointments_path, class: "btn btn-primary mr-2 px-4" %></span></p>
          <% elsif meeting.matching_status == "Scheduled" %>
          <p id="scheduled"><strong><%= link_to meeting.matching_status.upcase, appointments_path %></strong></p>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
