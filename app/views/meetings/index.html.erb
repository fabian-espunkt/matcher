<% if @my_meetings.count > 0 %>
  <div class="container">
    <h1 class="mb-5 py-3">Your Matches</h1>
      <div class="user-card cards">
      <% @my_meetings.each do |meeting| %>
        <% if current_user.kind == "investor" %>
          <%= render 'meeting_startup_card', meeting: meeting %>
        <% else %>
          <%= render 'meeting_investor_card', meeting: meeting %>
        <% end %>
      <% end %>
      </div>
  </div>
<% else %>
  <div class="container">
    <h1 class="mb-3 py-3">Your Matches</h1>
    <% if current_user.kind == "investor" %>
      <div class="pb-3">
        <p id="no-matches"> No matches, yet! Go back to <%= link_to "Matching View", attendances_path %> and like more startups</p>
      </div>
    <% else %>
      <div class="pb-3">
        <p id="no-matches"> No matches, yet! Go back to <%= link_to "Matching View", attendances_path %> and like more investors</p>
      </div>
    <% end %>
    </div>
<% end %>

  <!-- YOUR LIKES CARDS -->
  <div class="container">
    <% if @my_likes.count > 0 %>
    <h1 class="mb-3 py-3">Your Likes</h1>
<div class="container">
  <div class="user-card cards">
    <!-- one row = one card -->
    <% @my_likes.each do |viewing| %>
    <div class="row mb-3" id="selection-card">
      <%link_to "" %>
      <div class="card col-lg-12 selection-card">
        <div class="d-flex justify-content-between align-items-center" id="inner-content">
          <div class="col-sm-6 d-flex justfiy-content-between align-items-center">
            <div class="col logo-div">
              <%= cl_image_tag viewing.attendance.user.photo, class: "user-photo" %>
            </div>
            <hr noshade style="background-color: #c3bdbd42;height: 100px;width: 2.2px;">
            <div class="line-height-10 info-one col">
              <strong id="bold-name"><%= viewing.attendance.user.first_name %> <%= viewing.attendance.user.last_name %></strong></p>
              <p><%= viewing.attendance.user.position %> at <%= viewing.attendance.user.company_name %></p>
              <p><%= viewing.attendance.user.company_city %></p>
            </div>
           <hr noshade style="background-color: #c3bdbd42;height: 100px;width: 2.2px;">
          </div>

          <div class="col-sm-6 d-flex justfiy-content-between align-items-center">
            <div class="col info-three">
              <p>Founded <%= viewing.attendance.user.company_founding_year %>, <%= viewing.attendance.user.fte %> FTEs</p>
              <p><%= viewing.attendance.user.selling_to.join(", ") %> – <%= viewing.attendance.user.sectors.join(", ") %> </p>
              <p><%= viewing.attendance.user.stages.join(", ") %></p>
              <p>Raised <%= number_to_currency(viewing.attendance.user.funds_raised, delimiter: ",", precision: 0, unit: "€") %> to date</p>
            </div>
            <hr noshade style="background-color: #c3bdbd42;height: 100px;width: 2.2px;">
            <div class="matching-status col-">
              <p id="waiting"><strong>WAITING</strong></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
  </div>
</div>
  </div>
</div>
