<div class="container">
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
      <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="<%= params[:controller] == "attendances" && params[:action] == "index" ? "nav-item active": "nav-item" %>">
            <%= link_to "Matching", attendances_path, class: "nav-link mr-3" %>
          </li>
          <li class="<%= params[:controller] == "meetings" && params[:action] == "index" ? "nav-item active": "nav-item" %>">
            <%= link_to "Selection", meetings_path, id: "selection-tab", class: "nav-link mr-0" %>
          </li>

          <li class="<%= params[:controller] == "appointments" && params[:action] == "index" ? "nav-item active": "nav-item" %>">
            <%= link_to "Appointments", appointments_path, id:"appointments", class: "nav-link" %>
          </li>

          <li class="nav-item dropdown">
            <%= image_tag "https://media.licdn.com/dms/image/C4D03AQEWF3sTMdiatA/profile-displayphoto-shrink_200_200/0?e=1572480000&v=beta&t=neLS4eQkW6A7nrnNYTsT7bICHP4gYXktPViavGb2uMU", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <p id="current-user"><strong> Company: </strong> <%= current_user.company_name %> <br> <strong>User: </strong><%= current_user.first_name%> <%= current_user.last_name %> </p>
              <%= link_to "Edit Profile", profile_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Log In", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
